{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "dist",
        "allowSyntheticDefaultImports": true,
        "module": "es6",
        "target": "es5",
        "jsx": "react",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "esModuleInterop": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
